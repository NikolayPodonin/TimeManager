<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="@dimen/image_button_horizontal_padding"
                android:paddingEnd="@dimen/image_button_horizontal_padding"
                android:drawableEnd="@drawable/ic_arrow_back_white_24dp"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:contentDescription="@string/back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/horizontal_padding"
                android:layout_weight="1"
                android:textColor="@color/white500"
                android:text="@string/ok" />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/horizontal_divider_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/divider_vertical_margin"
        android:background="@color/colorDivider"/>

    <android.podonin.com.timemanager.measuredrecyclerviewvidget.MeasuredRecyclerView
        android:id="@+id/subcategories_efficiency_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.podonin.com.timemanager.measuredrecyclerviewvidget.MeasuredRecyclerView>

    <View
        android:id="@+id/horizontal_divider_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/divider_vertical_margin"
        android:background="@color/colorDivider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingTop="@dimen/vertical_padding"
        android:text="@string/task_description" />

    <EditText
        android:id="@+id/task_body_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:ignore="LabelFor"
        tools:text="Task body" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/task_date_edit"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/vertical_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="28.03.2018"/>

     <CheckBox
         android:id="@+id/done_check_box"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>